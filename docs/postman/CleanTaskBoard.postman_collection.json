{
  "info": {
    "name": "CleanTaskBoard API",
    "_postman_id": "c1e3f5aa-0000-4444-8888-123456789abc",
    "description": "Full CleanTaskBoard API collection with Boards, Columns, Tasks, Subtasks, Move/Reorder/Complete endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Boards",
      "item": [
        {
          "name": "Create Board",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Board\"\n}"
            },
            "url": "{{baseUrl}}/boards"
          }
        },
        {
          "name": "Get All Boards",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/boards"
          }
        },
        {
          "name": "Get Board By Id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/boards/{{boardId}}"
          }
        }
      ]
    },
    {
      "name": "Columns",
      "item": [
        {
          "name": "Create Column for Board",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"To Do\",\n  \"order\": 0\n}"
            },
            "url": "{{baseUrl}}/boards/{{boardId}}/columns"
          }
        },
        {
          "name": "Get Columns By Board Id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/boards/{{boardId}}/columns"
          }
        },
        {
          "name": "Get Column By Id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/columns/{{columnId}}"
          }
        },
        {
          "name": "Delete Column",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/columns/{{columnId}}"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task in Column",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My first task\",\n  \"description\": \"Test task\",\n  \"dueDate\": \"2025-12-31T00:00:00Z\",\n  \"priority\": 2\n}"
            },
            "url": "{{baseUrl}}/columns/{{columnId}}/tasks"
          }
        },
        {
          "name": "Get Tasks By Column Id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/columns/{{columnId}}/tasks"
          }
        },
        {
          "name": "Get Task By Id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/tasks/{{taskId}}"
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated task title\",\n  \"description\": \"Updated description\",\n  \"dueDate\": \"2026-01-15T00:00:00Z\",\n  \"priority\": 3\n}"
            },
            "url": "{{baseUrl}}/tasks/{{taskId}}"
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/tasks/{{taskId}}"
          }
        },
        {
          "name": "Move Task",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetColumnId\": \"{{targetColumnId}}\",\n  \"targetPosition\": 0\n}"
            },
            "url": "{{baseUrl}}/tasks/{{taskId}}/move"
          }
        },
        {
          "name": "Reorder Task (same column)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetPosition\": 1\n}"
            },
            "url": "{{baseUrl}}/tasks/{{taskId}}/reorder"
          }
        },
        {
          "name": "Toggle Task Completion",
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/tasks/{{taskId}}/complete"
          }
        }
      ]
    },
    {
      "name": "Subtasks",
      "item": [
        {
          "name": "Create Subtask",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Subtask 1\",\n  \"order\": 0\n}"
            },
            "url": "{{baseUrl}}/tasks/{{taskId}}/subtasks"
          }
        },
        {
          "name": "Get Subtasks By TaskId",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/tasks/{{taskId}}/subtasks"
          }
        },
        {
          "name": "Get Subtask By Id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/subtasks/{{subtaskId}}"
          }
        },
        {
          "name": "Toggle Subtask Completion",
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/subtasks/{{subtaskId}}/complete"
          }
        },
        {
          "name": "Reorder Subtask",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetPosition\": 1\n}"
            },
            "url": "{{baseUrl}}/subtasks/{{subtaskId}}/reorder"
          }
        },
        {
          "name": "Delete Subtask",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/subtasks/{{subtaskId}}"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:5001"
    },
    {
      "key": "boardId",
      "value": ""
    },
    {
      "key": "columnId",
      "value": ""
    },
    {
      "key": "taskId",
      "value": ""
    },
    {
      "key": "subtaskId",
      "value": ""
    },
    {
      "key": "targetColumnId",
      "value": ""
    }
  ]
}